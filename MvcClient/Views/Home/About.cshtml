@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<dl>
    @foreach (var userClaim in User.Claims)
    {
        <dt>@userClaim.Type</dt>
        <dt>@userClaim.Value</dt>
    }
</dl>
<dt>Access Token</dt>
<div>@await ViewContext.HttpContext.GetTokenAsync("access_token")</div>

<dt>refresh Token</dt>
<div>@await ViewContext.HttpContext.GetTokenAsync("refresh_token")</div>

<dt>Id Token</dt>
<div>@await ViewContext.HttpContext.GetTokenAsync("id_token")</div>

